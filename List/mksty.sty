%% Makro \haken ersetzt am 2.12.2002
%% Beginn Makro \haken
\def\haken{%
    \ifmmode%
        \def\next{\mathpalette\haken@math}%
    \else%
        \def\next{\haken@text}%
    \fi%
    \next%
}%
\def\haken@text#1{%
    \setbox0=\hbox{#1}%
    \haken@@{#1}{.37037ex}{.10476ex}%
    {}%
}%
\def\haken@math#1#2{%
    \setbox0=\hbox{$\m@th#1{#2}$}%
    \ifx#1\scriptstyle
        \haken@@{#2}{.26189ex}{.07407ex}%
    \else
        \ifx#1\scriptscriptstyle%
            \haken@@{#2}{.18519ex}{.05238ex}%
        \else%
            \haken@@{#2}{.37037ex}{.10476ex}%
        \fi%
    \fi%
}%
\def\haken@@#1#2#3{%
    #1%
    \hskip#2%
    \dimen0=\ht0%
    \advance\dimen0 by#2%
    \vrule height\dimen0 width#3 depth\dp0%
    \dimen1=\dimen0%
    \advance\dimen1 by#3%
    \dimen2=\wd0%
    \advance\dimen2 by#2%
    \advance\dimen2 by#3%
    \hskip-\dimen2%
    \vrule height\dimen1 width\dimen2 depth-\dimen0%
}%
